{
	"name": "vscode-cvs",
	"displayName": "CodeCVS",
	"description": "VS Code extension for CVS",
	"version": "0.0.6",
	"license": "MIT",
	"author": "Max Markeloff",
	"publisher": "mmarkeloff",
	"icon": "resources/logo.png",
	"homepage": "https://github.com/mmarkeloff/vscode-cvs/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/mmarkeloff/vscode-cvs"
	},
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-cvs.commit",
		"onCommand:vscode-cvs.commit_content",
		"onCommand:vscode-cvs.add",
		"onCommand:vscode-cvs.show",
		"onCommand:vscode-cvs.checkout",
		"onCommand:vscode-cvs.compare",
		"onCommand:vscode-cvs.update"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-cvs.commit",
				"title": "CodeCVS: commit"
			},
			{
				"command": "vscode-cvs.commit_content",
				"title": "CodeCVS: commit content"
			},
			{
				"command": "vscode-cvs.add",
				"title": "CodeCVS: add"
			},
			{
				"command": "vscode-cvs.show",
				"title": "CodeCVS: changes"
			},
			{
				"command": "vscode-cvs.checkout",
				"title": "CodeCVS: checkout ..."
			},
			{
				"command": "vscode-cvs.compare",
				"title": "CodeCVS: compare"
			},
			{
				"command": "vscode-cvs.update",
				"title": "CodeCVS: update"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "vscode-cvs.commit_content",
					"group": "CodeCVS"
				},
				{
					"command": "vscode-cvs.add",
					"group": "CodeCVS"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "vscode-cvs.show",
					"group": "CodeCVS"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "vscode-cvs.checkout",
					"group": "CodeCVS"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "vscode-cvs.update",
					"group": "CodeCVS"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "CVS configuration",
			"properties": {
				"vscode-cvs.CVSROOT": {
					"type": "string",
					"description": "CVSROOT variable"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/absolute": "0.0.29",
		"@types/glob": "^7.1.3",
		"@types/lodash": "^4.14.165",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"extensionDependencies": [],
	"dependencies": {}
}
